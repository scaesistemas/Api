{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: SCAE.WorkerService Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/SCAE.WorkerService/SCAE.WorkerService.csproj"
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/SCAE.Api/bin/Debug/net8.0/SCAE.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SCAE.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Docker .NET Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/SCAE.Api/SCAE.Api.csproj"
            }
        },
    ]
}